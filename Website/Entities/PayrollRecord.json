{
  "name": "PayrollRecord",
  "type": "object",
  "properties": {
    "employee_id": {
      "type": "string",
      "description": "Reference to employee"
    },
    "employee_name": {
      "type": "string",
      "description": "Employee name for reference"
    },
    "pay_period_start": {
      "type": "string",
      "format": "date",
      "description": "Start date of pay period"
    },
    "pay_period_end": {
      "type": "string",
      "format": "date",
      "description": "End date of pay period"
    },
    "gross_pay": {
      "type": "number",
      "description": "Gross pay amount"
    },
    "deductions": {
      "type": "number",
      "description": "Total deductions"
    },
    "net_pay": {
      "type": "number",
      "description": "Net pay amount"
    },
    "hours_worked": {
      "type": "number",
      "description": "Total hours worked (if hourly)"
    },
    "overtime_hours": {
      "type": "number",
      "description": "Overtime hours"
    },
    "bonus": {
      "type": "number",
      "description": "Bonus amount if applicable"
    },
    "pay_date": {
      "type": "string",
      "format": "date",
      "description": "Date payment was made"
    },
    "payment_method": {
      "type": "string",
      "enum": [
        "direct_deposit",
        "check",
        "wire_transfer"
      ],
      "default": "direct_deposit",
      "description": "Payment method"
    }
  },
  "required": [
    "employee_id",
    "employee_name",
    "pay_period_start",
    "pay_period_end",
    "gross_pay",
    "net_pay",
    "pay_date"
  ]
}